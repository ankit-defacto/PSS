@model PSS.WebWithAuth.Models.ContactMessage
@{
    ViewBag.Title = "PSS | Find the right senior care home for you with Premier Senior Solutions ::: Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PSS.WebWithAuth.Infrastructure;
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>, "js")
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>, "js")
<section class="page home clearfix">
	<div class="wrap clearfix">
		<h1 class="quote">
			Welcome
		</h1>
		<div class="imgWrapper">
			<img src="@Url.Content("~/Content/i/couple2.png")" alt="Your Guide To Local Assisted Living Options">
		</div>
		<div class="clearfix"></div>
        <div class="formArea clearfix">
        @if (!string.IsNullOrEmpty(ViewBag.ThankYou))
        {
            <fieldset class="row left small">
                <label class="smallCol">
                    <h2>@ViewBag.ThankYou</h2>
                </label>
            </fieldset>
        }
        else
        {
            using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "searchForm editForm" }))
            {
                @Html.AntiForgeryToken(Configurations.AntiForgeryTokenSalt)
                @Html.ValidationSummary(true)
                <fieldset class="row left small">
                    <label class="smallCol">
                        <h2>Contact</h2>
                    </label>
                    <label class="smallCol">
                        @Html.EditorFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </label>
                    <label class="smallCol">
			            @Html.EditorFor(m => m.Message)
                        @Html.ValidationMessageFor(m => m.Message)
		            </label>
                    <label class="smallCol">
			            <input type="submit" value="Submit" class="btnPattern submit leftNoPadding" />
                    </label>
                </fieldset>
            }
        }
	    </div>
    </div>
</section><!--/page-->