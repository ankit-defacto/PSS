<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js nomsie"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <script type="text/javascript">
        document.documentElement.className = document.documentElement.className.replace('no-js', '');
    </script>
    <link href="@Url.Content("~/Content/css/screen.css")" rel="stylesheet" type="text/css" media="screen"/>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    @Html.RenderResources("css")
    <script src="@Url.Content("~/Content/js/cufon-yui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/cursive.font.js")" type="text/javascript"></script>
    <script type="text/javascript">
        // fixing cufon loading delay
        function replaceFonts(selector) {
            Cufon.replace(selector, { fontFamily: 'cursive' });
            Cufon.now();
        }
    </script>
  </head>
  <body>
	<header id="header" class="clearfix">
		<div class="wrap clearfix">
			<div class="loginWrap clearfix">
                @Html.Action("LoginStatus", "Account", true)
			</div><!--/loginWrap-->
			@Html.Action("TopMenu", "Home", true)<!--/topM-->
            <script type="text/javascript">replaceFonts('.topM li a');</script>
		</div>
	</header>
    @RenderBody()
    <script type="text/javascript">replaceFonts('.quote');</script>
	<div id="footer" class="clearfix">
		<div class="wrap clearfix">
			<div class="copy">
				<p>Copyright &copy; 2012 Premier Senior Solutions</p>
				<p>Website created by Mendatech LLC & Concord Mfg LLC</p>
			</div>
			<ul class="bottomM">
				<li>
		            <a href="@Href("~/search")">Search</a>
	            </li>
	            <li>
		            <a href="@Href("~/account/create")">Create</a>
	            </li>
	            <li>
		            <a href="@Href("~/contact")">Contact</a>
	            </li>
			</ul><!--/bottomM-->
		</div>
	</div><!--/footer-->
    @Html.RenderResources("social")
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <!--[if lte IE 8]>
        <script src="@Url.Content("~/Content/js/lib/selectivizr.js")" type="text/javascript"></script>
    <![endif]-->
	<script type="text/javascript">
	    var _gaq = _gaq || [];
	    _gaq.push(['_setAccount', 'UA-32212051-1']);
	    _gaq.push(['_trackPageview']);
	    (function () {
	        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	    })();
	    // js constants
	    var EMPTYIMAGEURL = '@Url.Content(Configurations.EMPTYIMAGEURL)';
	    var ICONHOME = '@Url.Content(Configurations.ICONHOME)';
	    var ICONARROW = '@Url.Content(Configurations.ICONARROW)';
	    
	</script>
    <script src="@Url.Content("~/Content/js/script.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/psscommon.js")" ></script>
    @Html.RenderResources("js")
  </body>
</html>