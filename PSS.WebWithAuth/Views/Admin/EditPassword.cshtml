@model PSS.WebWithAuth.ViewModels.UserPasswordChangeViewModel
@{
    ViewBag.Title = "Edit Passowrd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using PSS.WebWithAuth.Infrastructure
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>, "js")
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>, "js")
<section class="page clearfix">
	<div class="wrap clearfix">
		<h1 class="quote">
			Change Password
		</h1>
		<div class="clearfix">
		<div class="formArea clearfix">
@using (Html.BeginForm("EditPassword", "Admin", FormMethod.Post, new { @class = "searchForm editForm" }))
{
    @Html.AntiForgeryToken(Configurations.AntiForgeryTokenSalt)
    //@Html.ValidationSummary(true)
			<fieldset class="row left small">            
            <label class="smallCol">  
                    @Html.ValidationMessage("")
                </label>
				<label class="smallCol">
					<p>Enter Old Password</p> 
				<div>@Html.PasswordFor(model => model.Password, new { @class = "input" })</div>
                  <div>@Html.ValidationMessageFor(model => model.Password)</div>
                
				</label>
				<label class="smallCol">
                <p>Enter New Password</p>
				<div>@Html.PasswordFor(model => model.NewPassword, new { @class = "input" })</div>
                    @Html.ValidationMessageFor(model => model.NewPassword)
				</label>
				<label class="smallCol">
					<p>Re-Type New Password</p>
					<div>@Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input" })</div>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
				</label>
              <label class="smallCol">
				 <button type="submit" class="btnPattern submit leftNoPadding left"  >Save</button>
			</label>
			</fieldset>
               
		
}<!--/searchForm-->
		</div>
        </div>
	</div>
</section>
<!--/page-->
