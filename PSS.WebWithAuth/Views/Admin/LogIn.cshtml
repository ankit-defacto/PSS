@model PSS.WebWithAuth.ViewModels.LogInViewModel
@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/_AdminBeforeLogin.cshtml";
}
@using PSS.WebWithAuth.Infrastructure;
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>, "js")
@Html.Resource(@<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>, "js")

<section class="page home clearfix">
	<div class="wrap clearfix">
		<h1 class="quote">
			Admin<br /> Login Panel
		</h1>
		<div class="imgWrapper">
			<img src="@Url.Content("~/Content/i/couple2.png")" alt="Your Guide To Local Assisted Living Options">
		</div>
		<div class="clearfix"></div> 
        <div class="formArea clearfix">
		<div class="fullW noTop">
			<div class="right">                
                @Html.ActionLink("Forgot Password", "ForgotPwd", null, new { @class = "btnPattern submit leftNoPadding right" })
			</div>
		</div>
@using (Html.BeginForm("LogIn", "Admin", FormMethod.Post, new { @class = "searchForm editForm" }))
{
    @Html.AntiForgeryToken(Configurations.AntiForgeryTokenSalt)
    //<span style="font-weight: bold; color: #ff0000;">@Html.ValidationSummary(true)</span> 
            @Html.ValidationMessage("")  
			<fieldset class="row left small">       
				<label class="smallCol">
					<p>Enter Username</p> 
                 <div>@Html.EditorFor(model => model.UserName, new { @class = "input" })</div>                 
                  <div>@Html.ValidationMessageFor(model => model.UserName)</div>                
				</label>
				<label class="smallCol">
                <p>Enter Password</p>
				<div>@Html.PasswordFor(model => model.Password, new { @class = "input" })</div>
                    @Html.ValidationMessageFor(model => model.Password)
				</label>				
              <label class="smallCol">
				 <button type="submit" class="btnPattern submit leftNoPadding left"  >LogIn</button>
			</label>
			</fieldset>
}
		</div>
    </div>
</section>